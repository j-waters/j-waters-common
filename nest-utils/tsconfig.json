{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"lib": [
			"esnext",
		],
		"outDir": "dist"
	},
	"include": [
		"lib/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}
